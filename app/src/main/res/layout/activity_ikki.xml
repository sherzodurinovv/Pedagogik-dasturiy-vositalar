                        app:fontFamily="sans-serif-black" />

                </androidx.cardview.widget.CardView>



            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/center_layout"
                android:layout_width="match_parent"
